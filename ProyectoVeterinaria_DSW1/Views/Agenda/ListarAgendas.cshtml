@model IEnumerable<ProyectoVeterinaria_DSW1.Models.AgendaVeterinario>

@{
    ViewData["Title"] = "Mis Horarios de Atención";
}

<div class="container mt-4">
    <h2>Mi Agenda de Atención</h2>
    <a asp-controller="Veterinario" asp-action="Index" class="btn btn-danger">
    Regresar
    </a>
    <hr />
    <p>
        <a asp-action="Crear" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Registrar Nuevo Horario
        </a>
    </p>
    <hr />

    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["MensajeExito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["MensajeError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Día</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th class="text-center">Cupo Máx.</th>
                <th class="text-center">Disponible</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold text-primary">@item.NombreDiaSemana</td>
                    <td>@item.HoraInicio.ToString(@"hh\:mm")</td>
                    <td>@item.HoraFin.ToString(@"hh\:mm")</td>
                    <td class="text-center">@item.CupoMaximo</td>
                    <td class="text-center">@item.CupoDisponible</td>
                    <td class="text-center">
                        @if (item.CupoDisponible > 0)
                        {
                            <span class="badge bg-success">Disponible</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Agotado / Cerrado</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Editar" asp-route-id="@item.IdAgenda" class="btn btn-sm btn-warning">Editar</a>

                        <a asp-action="Eliminar" asp-route-id="@item.IdAgenda" class="btn btn-sm btn-danger"
                           onclick="return confirm('¿Está seguro de eliminar esta agenda?')">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
