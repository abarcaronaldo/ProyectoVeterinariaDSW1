@model ProyectoVeterinaria_DSW1.ViewsModel.VeterinarioViewModel

@{
    ViewData["Title"] = "AgregarVeterinario";
}

<h1>AgregarVeterinario</h1>

<hr />
<div class="container mt-4">
    <div class="card shadow" style="max-width: 500px; margin: auto;">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Nuevo Veterinario</h4>
        </div>
        <div class="card-body">
            <form asp-action="AgregarVeterinario">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <h6 class="text-muted border-bottom pb-2">Datos de Acceso</h6>
                <div class="form-group mb-3">
                    <label asp-for="email" class="control-label fw-bold">Correo Electrónico</label>
                    <input asp-for="email" class="form-control" placeholder="ejemplo@veterinaria.com" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="password" class="control-label fw-bold">Contraseña</label>
                    <input asp-for="password" type="password" class="form-control" placeholder="******" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

                <h6 class="text-muted border-bottom pb-2">Información Personal</h6>
                <div class="form-group mb-3">
                    <label asp-for="nombre" class="control-label fw-bold">Nombres</label>
                    <input asp-for="nombre" class="form-control" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="apellido" class="control-label fw-bold">Apellidos</label>
                    <input asp-for="apellido" class="form-control" />
                    <span asp-validation-for="apellido" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <input type="submit" value="Confirmar Registro" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar y Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
