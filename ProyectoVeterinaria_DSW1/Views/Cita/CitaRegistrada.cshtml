@{
    var exito = TempData["Exito"] as bool?;
    var mensajeError = TempData["Error"] as string;
}

<style>
    body {
        background: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .resultado-container {
        max-width: 500px;
        margin: 60px auto;
        padding: 35px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        text-align: center;
    }

    h2 {
        font-weight: 700;
        margin-bottom: 20px;
        color: @(exito == true ? "#28a745" : "#dc3545"); /* verde para éxito, rojo para error */
    }

    p {
        font-size: 16px;
        color: #333;
        margin-bottom: 25px;
    }

    .info-detalle {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        text-align: left;
        box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
    }

    .btn {
        display: inline-block;
        padding: 12px 20px;
        margin: 5px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.3s, transform 0.2s;
    }

    .btn-primary {
        background: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background: #0056b3;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }
</style>

<div class="resultado-container">
    <h2>@(exito == true ? "¡Cita registrada correctamente!" : "No se pudo registrar la cita")</h2>

    @if (exito != true)
    {
        <p>@mensajeError</p>
        <a asp-controller="Dueno" asp-action="ReservarCita" class="btn btn-primary">Volver a reservar cita</a>
    }
    else
    {
        <div class="info-detalle">
            <p><strong>Fecha:</strong> @TempData["FechaCita"]</p>
            <p><strong>Hora:</strong> @TempData["HoraCita"]</p>
            <p><strong>Motivo:</strong> @TempData["Motivo"]</p>
        </div>

        <a asp-action="Index" asp-controller="Dueno" class="btn btn-primary">Volver al inicio</a>
        <a asp-controller="Dueno" asp-action="ReservarCita" class="btn btn-secondary">Reservar otra cita</a>
    }
</div>
