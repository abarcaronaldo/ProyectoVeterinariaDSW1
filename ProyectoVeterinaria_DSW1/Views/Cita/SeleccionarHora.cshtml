@using ProyectoVeterinaria_DSW1.ViewsModel
@model SeleccionarHoraViewModel

<h2>Seleccionar hora para @Model.FechaCita.ToString("yyyy-MM-dd")</h2>

<form method="post" asp-action="SeleccionarHora">
    <input type="hidden" name="IdAgenda" value="@Model.IdAgenda" />
    <input type="hidden" name="FechaCita" value="@Model.FechaCita.ToString("yyyy-MM-dd")" />
    <input type="hidden" name="DuracionCitaMin" value="@Model.DuracionCitaMin" />

    <div class="form-group">
        <label>Hora deseada:</label>
        <input type="time"
               name="HoraDeseada"
               class="form-control"
               min="@Model.HoraInicio.ToString(@"hh\:mm")"
               max="@Model.HoraFin.ToString(@"hh\:mm")"
               step="60"
               required />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Continuar</button>
</form>

<br />

<a asp-action="BuscarDisponibilidad" asp-route-fecha="@Model.FechaCita.ToString("yyyy-MM-dd")" class="btn btn-secondary">← Volver</a>
