@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<ProyectoVeterinaria_DSW1.ViewsModel.DetalleCitaViewModel>
@using System.Linq
@{
    ViewData["Title"] = "PruebaCita";
}

<h1>Mis Citas</h1>
<a asp-controller="Veterinario" asp-action="Index" class="btn btn-danger">
    Regresar
</a>

@* Mensajes de confirmación *@
@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensajeExito"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Prueba de Listado de Citas por Estado</h2>
<form asp-action="MisCitas" asp-controller="Cita" method="post" class="mb-4">
    <div class="row align-items-end">
        <div class="col-md-4">
            <label for="IdEstadoFiltro" class="form-label">Filtrar por Estado:</label>
            @Html.DropDownList("IdEstadoFiltro", ViewBag.ListaEstados as List<SelectListItem>, new { @class = "form-select" })
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

<hr />

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Estado</th>
            <th>Especie</th>
            <th>Dueño</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr><td colspan="7" class="text-center text-muted">No se encontraron citas.</td></tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.idcita</td>
                    <td>@item.fechacita.ToShortDateString()</td>
                    <td>@item.horacita.ToString(@"hh\:mm")</td>
                    <td>
                        <span class="badge @(item.estado == "Atendida" ? "bg-success" : "bg-danger")">
                            @item.estado
                        </span>
                    </td>
                    <td>@item.especie</td>
                    <td>@item.nombredueno</td>
                    <td class="text-center">
                        @if (item.estado == "Por Atender")
                        {
                            <a asp-action="EstadoCita" asp-route-id="@item.idcita" class="btn btn-sm btn-warning">
                                Editar Estado
                            </a>
                        }
                        @Html.ActionLink("Detalle", "VerDetalle", new { idCita = item.idcita }, new { @class = "btn btn-sm btn-info text-white" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<p>Total de registros mostrados: @Model.Count()</p>