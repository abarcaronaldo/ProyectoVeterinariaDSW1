@using ProyectoVeterinaria_DSW1.ViewsModel
@model List<AgendaDisponibilidadViewModel>

@{
    ViewData["Title"] = "Veterinarios disponibles";
    var fecha = ViewBag.FechaSeleccionada as string ?? "";
}

<style>
    body {
        background: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .disponibilidad-container {
        max-width: 700px;
        margin: 50px auto;
        padding: 30px;
    }

    h2 {
        color: #007bff;
        text-align: center;
        font-weight: 700;
        margin-bottom: 30px;
    }

    .alert-warning {
        background: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
        padding: 20px;
        margin-bottom: 20px;
        transition: transform 0.2s, box-shadow 0.2s;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
        }

    .card-info {
        font-size: 16px;
        color: #333;
        font-weight: 600;
    }

    .card-time {
        font-size: 14px;
        color: #555;
        margin-top: 5px;
    }

    .btn-select {
        background: #007bff;
        color: white;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.3s, transform 0.2s;
    }

        .btn-select:hover {
            background: #0056b3;
            transform: translateY(-2px);
        }

    .btn-back {
        display: block;
        text-align: center;
        margin-top: 20px;
        background: #6c757d;
        color: white;
        padding: 12px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: background 0.3s, transform 0.2s;
    }

        .btn-back:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }
</style>

<div class="disponibilidad-container">
    <h2>Veterinarios disponibles para @fecha</h2>

    @if (!Model.Any())
    {
        <div class="alert-warning">
            No hay veterinarios disponibles en la fecha seleccionada o no hay cupos.
        </div>

        <a asp-controller="Dueno" asp-action="ReservarCita" class="btn-back">
            ← Elegir otra fecha
        </a>
    }
    else
    {
        @foreach (var a in Model)
        {
            <div class="card">
                <div>
                    <div class="card-info">@a.NombreVeterinario</div>
                    <div class="card-time">@a.HoraInicio.ToString(@"hh\:mm") a @a.HoraFin.ToString(@"hh\:mm") — Cupos: @a.CupoDisponible</div>
                </div>
                <a asp-action="SeleccionarHora"
                   asp-route-idAgenda="@a.IdAgenda"
                   asp-route-fecha="@fecha"
                   class="btn-select">
                    Seleccionar
                </a>
            </div>
        }

        <a asp-controller="Dueno" asp-action="ReservarCita" class="btn-back">
            ← Volver
        </a>
    }
</div>
