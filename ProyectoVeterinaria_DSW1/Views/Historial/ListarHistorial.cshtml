@model IEnumerable<ProyectoVeterinaria_DSW1.Models.HistorialMedico>

@{
    ViewData["Title"] = "Historial de Atenciones";
}

<h1>Listar Historial</h1>

<div class="container mt-4">
    <h1>Historial de Atenciones Médicas</h1>
    <p class="text-muted">Lista de pacientes atendidos por usted.</p>

    <table class="table table-hover mt-3">
        <thead class="table-secondary">
            <tr>
                <th>Fecha</th>
                <th>Paciente / Dueño</th>
                <th>Diagnóstico</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No cuenta con historiales registrados aún.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FechaAtencion.ToShortDateString()</td>
                        <td>
                            <strong>@item.NombreMascota</strong><br />
                            <small class="text-muted">Dueño: @item.NombreDueno</small>
                        </td>
                        <td>
                            @(item.Diagnostico.Length > 50 ? item.Diagnostico.Substring(0, 47) + "..." : item.Diagnostico)
                        </td>
					</tr>
                }
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-controller="Veterinario" asp-action="Index" class="btn btn-secondary">Regresar al Panel</a>
    </div>
</div>