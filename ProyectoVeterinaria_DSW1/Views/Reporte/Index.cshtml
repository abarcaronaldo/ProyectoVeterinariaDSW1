@{
    ViewData["Title"] = "Reportes";
}

<div class="container mt-4">

    <div class="mb-4">
        <h2 class="fw-semibold">Reportes</h2>
        <p class="text-muted mb-0">
            Seleccione un reporte para visualizar la información de las citas.
        </p>
        <br />
        <a asp-controller="Veterinario" asp-action="Index" class="btn btn-outline-secondary">
            ← Regresar
        </a>
    </div>

    <div class="row g-4">

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Citas de la Semana</h5>
                    <p class="card-text text-muted flex-grow-1">
                        Visualiza el total de citas registradas durante la semana.
                    </p>
                    <a asp-action="CitasSemana" class="btn btn-outline-primary mt-auto">
                        Ver reporte
                    </a>
                </div>
            </div>
        </div>

        <!--AGREGAR OTROS TIPOS DE REPORTE -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Citas por el Mes</h5>
                    <p class="card-text text-muted flex-grow-1">
                        Consulta el total de citas registradas en un rango de fecha.
                    </p>
                    <a asp-action="CitasMensual" class="btn btn-outline-primary mt-auto">
                        Ver reporte
                    </a>
                </div>
            </div>
        </div>

        <!--AGREGAR OTROS TIPOS DE REPORTE -->

    </div>
</div>
